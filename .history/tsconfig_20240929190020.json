{
  "compilerOptions": {
    "target": "ES2022", // versão do Js que será convertida
    "outDir": "./dist/js/", // pasta de destino do Js convertido
    "noEmitOnError": true, // não compila se houver erro
    "experimentalDecorators": true // habilita o uso de decorators
  },
  "include": ["./src/**/*"] // pasta de origem dos arquivos TS
}
